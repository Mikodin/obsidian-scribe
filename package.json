{
	"name": "obsidian-scribe-plugin",
	"version": "2.3.1",
	"description": "An Obsidian plugin for recording voice notes, transcribing the audio, and summarizing the text - All in one",
	"main": "build/main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build:prod": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"update-all-deps": "npm outdated | awk 'NR>1 {print $1\"@\"$4}' | xargs npm install",
		"format:check": "biome format ./src",
		"format:write": "biome format --write ./src"
	},
	"keywords": [],
	"author": "Mike Alicea",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/node": "^25.0.2",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.3",
		"builtin-modules": "^5.0.0",
		"dotenv": "^17.2.3",
		"esbuild": "^0.27.1",
		"obsidian": "latest",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@langchain/core": "^1.1.5",
		"@langchain/openai": "^1.2.0",
		"assemblyai": "^4.23.1",
		"langchain": "^1.2.0",
		"mini-debounce": "^1.0.8",
		"openai": "^6.10.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"standardized-audio-context": "^25.3.77",
		"zod": "^4.1.13"
	}
}
